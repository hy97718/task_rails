<div class="p-3 bg-light">
  <div class ="m-3 position-relative">
    <%= link_to "←  一覧へ戻る","/"%>
    <div class="btn btn-outline-primary position-absolute top-0 end-0">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
      <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
      </svg>
      <%= link_to "編集","/tasks/#{@task.id}/edit",class: "text-decoration-none"%>
    </div> 
  </div> 
  <div class="container bg-white m-5 mx-auto p-3 w-50">  
    <p class="fs-4 fw-bold">
        <%= @task.title%>
    </p>
  <table class="table">
      <tbody>
          <tr>
              <td class="table-secondary">開始日</td>
              <td><%= @task.start_at.to_s(:date_jp)%></td>
          </tr>
          <tr>
              <td class="table-secondary">終了日</td>
              <td><%= @task.end_at.to_s(:date_jp)%></td>
          </tr>
          <tr>
              <td class="table-secondary">終日</td>
              <td>
                <% if @task.is_all_day == true %>
                  ○
                <% elsif @task.is_all_day == false %>

                <% end %>
              </td>
          </tr>
          <tr>
              <td class="table-secondary">スケジュールメモ</td>
              <td><%= @task.memo%></td>
          </tr>
      </tbody>
  </table>
  </div>
</div>  